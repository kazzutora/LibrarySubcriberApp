<Window x:Class="JewelryStoreApp.AddSupplierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Supplier" Height="300" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Supplier ID:" FontWeight="Bold" Margin="0,-18,10,28"/>
        <TextBox x:Name="txtSupplierID" Grid.Row="0" Margin="5,5,5,5" Background="#f0f0f0" Padding="5"/>

        <Label Content="Supplier Name:" FontWeight="Bold" Grid.Row="1" Margin="5"/>
        <TextBox x:Name="txtSupplierName" Grid.Row="2" Margin="5" Background="#f0f0f0" Padding="5"/>

        <Label Content="Contact Info:" FontWeight="Bold" Grid.Row="3" Margin="5,18,5,64" Grid.RowSpan="2"/>
        <TextBox x:Name="txtContactInfo" Grid.Row="4" Margin="5,24,5,27" Background="#f0f0f0" Padding="5"/>

        <Button Content="Add Supplier" Grid.Row="4" Width="105" Click="btnSave_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#4CAF50" Foreground="White" Padding="10" Margin="250,24,0,0" Height="43"/>
    </Grid>
</Window>
