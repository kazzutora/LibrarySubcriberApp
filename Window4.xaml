<Window x:Class="JewelryStoreApp.ViewProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View Products" Height="400" Width="600" Background="#F0F4F8" Padding="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Products List" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <DataGrid x:Name="dgProducts" Grid.Row="1" AutoGenerateColumns="True" IsReadOnly="True" Margin="0"/>
    </Grid>
</Window>
